<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/chewy</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">24sp</item>
        <item name="android:width">196dp</item>
        <item name="android:buttonCornerRadius">8dp</item>
        <item name="android:fontFamily">@font/chewy</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:colorLongPressedHighlight">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
